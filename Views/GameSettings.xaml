<Page
    x:Class="LUDO.Views.GameSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LUDO.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#D9D9D9">

    <Page.Resources>
        <!--<ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\ButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>-->

        <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="25,10,25,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="{TemplateBinding Background}">
                            <Border x:Name="RadioButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="25">
                                <Grid>
                                    <ContentPresenter x:Name="ContentPresenter"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              Content="{TemplateBinding Content}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                </Grid>
                            </Border>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RadioButtonBorder"
                                                                   Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="YourCheckedColor" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                    <VisualState x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#666363" CornerRadius="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" Foreground="White" TextWrapping="WrapWholeWords" >
				Choose number of players and their colors:
        </TextBlock>

        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="{Binding Player1Name}" Command="{Binding ChangeNameCommand}" CommandParameter="Player1Name" Grid.Column="0" Grid.Row="1" FontSize="36" Background="#D9D9D9" HorizontalAlignment="Stretch" Margin="0,0,10,10"/>
            <Button Content="{Binding Player2Name}" Command="{Binding ChangeNameCommand}" CommandParameter="Player2Name" Grid.Column="0" Grid.Row="2" FontSize="36" Background="#D9D9D9" HorizontalAlignment="Stretch" Margin="0,0,10,10"/>
            <Button Content="{Binding Player3Name}" Command="{Binding ChangeNameCommand}" Visibility="{Binding IsPlayer3Visible}" CommandParameter="Player3Name" Grid.Column="0" Grid.Row="3" FontSize="36" Background="#D9D9D9" HorizontalAlignment="Stretch" Margin="0,0,10,10"/>
            <Button Content="{Binding Player4Name}" Command="{Binding ChangeNameCommand}" Visibility="{Binding IsPlayer4Visible}" CommandParameter="Player4Name" Grid.Column="0" Grid.Row="4" FontSize="36" Background="#D9D9D9" HorizontalAlignment="Stretch" Margin="0,0,10,10"/>

            <RadioButton  Grid.Column="1" Grid.Row="1" GroupName="Player1" Style="{StaticResource RadioButtonStyle}" Background="Blue"/>
            <RadioButton  Grid.Column="2" Grid.Row="1" GroupName="Player1" Style="{StaticResource RadioButtonStyle}" Background="Red"/>
            <RadioButton  Grid.Column="3" Grid.Row="1" GroupName="Player1" Style="{StaticResource RadioButtonStyle}" Background="Green"/>
            <RadioButton  Grid.Column="4" Grid.Row="1" GroupName="Player1" Style="{StaticResource RadioButtonStyle}" Background="Yellow" />

            <RadioButton  Grid.Column="1" Grid.Row="2" GroupName="Player2" Style="{StaticResource RadioButtonStyle}" Background="Blue"/>
            <RadioButton  Grid.Column="2" Grid.Row="2" GroupName="Player2" Style="{StaticResource RadioButtonStyle}" Background="Red"/>
            <RadioButton  Grid.Column="3" Grid.Row="2" GroupName="Player2" Style="{StaticResource RadioButtonStyle}" Background="Green"/>
            <RadioButton  Grid.Column="4" Grid.Row="2" GroupName="Player2" Style="{StaticResource RadioButtonStyle}" Background="Yellow" />

            <RadioButton  Grid.Column="1" Grid.Row="3" GroupName="Player3" Style="{StaticResource RadioButtonStyle}" Background="Blue" Visibility="{Binding IsPlayer3Visible}"/>
            <RadioButton  Grid.Column="2" Grid.Row="3" GroupName="Player3" Style="{StaticResource RadioButtonStyle}" Background="Red" Visibility="{Binding IsPlayer3Visible}"/>
            <RadioButton  Grid.Column="3" Grid.Row="3" GroupName="Player3" Style="{StaticResource RadioButtonStyle}" Background="Green" Visibility="{Binding IsPlayer3Visible}"/>
            <RadioButton  Grid.Column="4" Grid.Row="3" GroupName="Player3" Style="{StaticResource RadioButtonStyle}" Background="Yellow" Visibility="{Binding IsPlayer3Visible}"/>

            <RadioButton  Grid.Column="1" Grid.Row="4" GroupName="Player4" Style="{StaticResource RadioButtonStyle}" Background="Blue" Visibility="{Binding IsPlayer4Visible}"/>
            <RadioButton  Grid.Column="2" Grid.Row="4" GroupName="Player4" Style="{StaticResource RadioButtonStyle}" Background="Red" Visibility="{Binding IsPlayer4Visible}"/>
            <RadioButton  Grid.Column="3" Grid.Row="4" GroupName="Player4" Style="{StaticResource RadioButtonStyle}" Background="Green" Visibility="{Binding IsPlayer4Visible}"/>
            <RadioButton  Grid.Column="4" Grid.Row="4" GroupName="Player4" Style="{StaticResource RadioButtonStyle}" Background="Yellow" Visibility="{Binding IsPlayer4Visible}"/>

            <!--<RadioButton Name="Blue1" GroupName="Player1" Background="Blue" Style="{StaticResource RadioButtonStyle}" Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Blue1}" Margin="50,0,0,0"/>
            <RadioButton Name="Red1" GroupName="Player1" Background="Red" Style="{StaticResource RadioButtonStyle}" Grid.Column="2" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Red1}" Margin="50,0,0,0"/>
            <RadioButton Name="Green1" GroupName="Player1" Background="Green" Style="{StaticResource RadioButtonStyle}" Grid.Column="3" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Green1}" Margin="50,0,0,0"/>
            <RadioButton Name="Yellow1" GroupName="Player1" Background="Yellow" Style="{StaticResource RadioButtonStyle}" Grid.Column="4" Grid.Row="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Yellow1}" Margin="50,0,0,0"/>

            <RadioButton Name="Blue2" GroupName="Player2" Background="Blue" Style="{StaticResource RadioButtonStyle}" Grid.Column="1" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Blue2}" Margin="50,0,0,0"/>
            <RadioButton Name="Red2" GroupName="Player2" Background="Red" Style="{StaticResource RadioButtonStyle}" Grid.Column="2" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Red2}" Margin="50,0,0,0"/>
            <RadioButton Name="Green2" GroupName="Player2" Background="Green" Style="{StaticResource RadioButtonStyle}" Grid.Column="3" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Green2}" Margin="50,0,0,0"/>
            <RadioButton Name="Yellow2" GroupName="Player2" Background="Yellow" Style="{StaticResource RadioButtonStyle}" Grid.Column="4" Grid.Row="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Yellow2}" Margin="50,0,0,0"/>

            <RadioButton  Name="Blue3" GroupName="Player3"  Visibility="{Binding IsPlayer3Visible}" Background="Blue" Style="{StaticResource RadioButtonStyle}" Grid.Column="1" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Command="{Binding ChangeColor}" IsChecked="{Binding Blue3}" Margin="50,0,0,0"/>
            <RadioButton  Name="Red3" GroupName="Player3"  Visibility="{Binding IsPlayer3Visible}" Background="Red" Style="{StaticResource RadioButtonStyle}" Grid.Column="2" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Red3}" Margin="50,0,0,0"/>
            <RadioButton  Name="Green3" GroupName="Player3"  Visibility="{Binding IsPlayer3Visible}" Background="Green" Style="{StaticResource RadioButtonStyle}" Grid.Column="3" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Green3}" Margin="50,0,0,0"/>
            <RadioButton  Name="Yellow3" GroupName="Player3"  Visibility="{Binding IsPlayer3Visible}" Background="Yellow" Style="{StaticResource RadioButtonStyle}" Grid.Column="4" Grid.Row="3" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Yellow3}" Margin="50,0,0,0"/>

            <RadioButton  Name="Blue4" GroupName="Player4"  Visibility="{Binding IsPlayer4Visible}" Background="Blue" Style="{StaticResource RadioButtonStyle}" Grid.Column="1" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}"  IsChecked="{Binding Blue4}" Margin="50,0,0,0"/>
            <RadioButton Name="Red4" GroupName="Player4"  Visibility="{Binding IsPlayer4Visible}" Background="Red" Style="{StaticResource RadioButtonStyle}"  Grid.Column="2" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Red4}" Margin="50,0,0,0"/>
            <RadioButton Name="Green4" GroupName="Player4"  Visibility="{Binding IsPlayer4Visible}" Background="Green" Style="{StaticResource RadioButtonStyle}" Grid.Column="3" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Green4}" Margin="50,0,0,0"/>
            <RadioButton Name="Yellow4" GroupName="Player4"  Visibility="{Binding IsPlayer4Visible}" Background="Yellow" Style="{StaticResource RadioButtonStyle}" Grid.Column="4" Grid.Row="4" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Command="{Binding ChangeColor}" IsChecked="{Binding Yellow4}" Margin="50,0,0,0"/>-->
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,10,0">
                <Button Background="Transparent" Command="{Binding PlusPlayerCommand}" Visibility="{Binding IsPlusButtonVisible}">
                    <Image Width="52" Height="52" Source="ms-appx:///Assets/plusIcon.png"/>
                </Button>
                <Button Background="Transparent" Visibility="{Binding IsMinusButtonVisible}" Command="{Binding MinusPlayerCommand}">
                    <Image Width="52" Height="52" Source="ms-appx:///Assets/minusIcon.png"/>
                </Button>
            </StackPanel>

            <TextBlock Text="{Binding AddRemoveText}" Grid.Column="1" FontSize="36" Foreground="White" VerticalAlignment="Top" Margin="0,5,0,0"/>
        </Grid>

        <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock FontSize="36" Foreground="White" Margin="0,10,10,0">
					Click → to start the game
            </TextBlock>

            <Button Command="{Binding ForwardCommand}" Background="Transparent">
                <Image Width="68" Height="68" Source="ms-appx:///Assets/forwardIcon.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
